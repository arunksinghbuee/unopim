# Environment Variables for Google Cloud Run Deployment
# Created by Arun Kumar Singh
# Copy this file to .env and update with your actual values

# Application Configuration
APP_NAME=UnoPim
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-cloudrun-service-url.run.app
APP_TIMEZONE=UTC
APP_LOCALE=en_US
APP_CURRENCY=USD

# Database Configuration (Use Cloud SQL or external database)
DB_CONNECTION=mysql
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
DB_DATABASE=unopim
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_PREFIX=

# AWS S3 Configuration for Image Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=ap-south-1
AWS_BUCKET=your-s3-bucket-name
AWS_URL=https://your-cloudfront-domain.cloudfront.net

# CloudFront Configuration (Optional - if using CloudFront)
CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net
FILESYSTEM_DISK=s3

# Redis Configuration (Optional - for caching and queues)
REDIS_HOST=your_redis_host
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_DEFAULT_DATABASE=0
REDIS_CACHE_DATABASE=1
REDIS_SESSION_DATABASE=2

# Queue Configuration
QUEUE_CONNECTION=database
# Or use Redis: QUEUE_CONNECTION=redis

# Session Configuration
SESSION_DRIVER=database
# Or use Redis: SESSION_DRIVER=redis

# Cache Configuration
CACHE_DRIVER=file
# Or use Redis: CACHE_DRIVER=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_CONNECTION=default
ELASTICSEARCH_INDEX_PREFIX=unopim
ELASTICSEARCH_HOST=your_elasticsearch_host
ELASTICSEARCH_PORT=9200

# OpenAI Configuration (for Magic AI features)
OPENAI_API_KEY=your_openai_api_key

# Cloud Run Specific
RUN_MIGRATIONS=false
# Set to true if you want to run migrations on container startup

